# E2E Test Configuration
# Copy this file to .env and fill in the values

# ===========================================
# LCM Configuration
# ===========================================

# Shared secret for LCM client registration (must match lcm.yaml)
LCM_SHARED_SECRET=e2e-test-secret

# LCM Client ID (unique identifier for this test client)
LCM_CLIENT_ID=nginx-e2e-test

# ===========================================
# Test Domain Configuration
# ===========================================

# Domain to use for certificate testing
# For self-signed tests: can be any domain
# For ACME tests: must be a real domain you control
TEST_DOMAIN=e2e-test.example.com

# ===========================================
# ACME Configuration (Optional)
# ===========================================

# Skip ACME tests (default: true for basic self-signed tests)
SKIP_ACME_TESTS=true

# Email for ACME account registration
ACME_EMAIL=

# ACME endpoint (staging or production)
# Staging: https://acme-staging-v02.api.letsencrypt.org/directory
# Production: https://acme-v02.api.letsencrypt.org/directory
ACME_ENDPOINT=https://acme-staging-v02.api.letsencrypt.org/directory

# ===========================================
# Cloudflare DNS Configuration (Optional)
# Required for DNS-01 ACME challenges
# ===========================================

# Cloudflare API Token with Zone:DNS:Edit permission
CLOUDFLARE_API_TOKEN=

# Cloudflare Zone ID for the test domain
CLOUDFLARE_ZONE_ID=

# ===========================================
# Test Options
# ===========================================

# Enable verbose output
VERBOSE=false
